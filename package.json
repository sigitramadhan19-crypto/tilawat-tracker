{
  "name": "tilawat-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:server",
    "build:server": "tsc -p server/tsconfig.json",
    "start": "node server/dist/src/app.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "db:generate": "drizzle-kit generate --config=server/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=server/drizzle.config.ts",
    "db:push": "drizzle-kit push --config=server/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=server/drizzle.config.ts"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "better-auth": "^1.4.18",
